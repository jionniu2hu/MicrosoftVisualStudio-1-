@model WebApplication1.ViewModels.EmployeeListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>@Model.userName,@Model.Greeting</h2>
    <p>
        <a href="/Employee/AddNew">新增</a>
    </p>
    <form action="/employee/QueryName" method="post">
        姓名：<input type="text" name="searchName" />
        <input type="submit" name="查询" />
        <input type="reset" name="BtnReset" value="重置" />
    </form>
    <hr />
    <div>
        <ul>
            @foreach (var key in Model.EmployeeViewList)
            {
                <li>
                    @key.EmployeeName,@key.EmployeeSalary,@key.EmployeeGrade

                    @*<a href="/Employee/Delete/@key.EmployeeId">删除</a>*@
                    @*<a href="/Employee/Update/@key.EmployeeId">更新</a>*@

                    @Html.ActionLink("删除", "Delete", new { id = key.EmployeeId })
                    @Html.ActionLink("更新", "Update", new { id = key.EmployeeId })
                </li>
            }
        </ul>
    </div>
</body>
</html>
